{
  "extends": [
    "next",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "react/no-unescaped-entities": "off",
    "@next/next/no-page-custom-font": "off",
    "@typescript-eslint/no-explicit-any": "off", // Disable "Unexpected any" errors temporarily
    "@typescript-eslint/no-unused-vars": "off", // Set "unused variable" errors to warnings
    "@next/next/no-img-element": "off" // Set <img> warnings to non-blocking warnings
  }
}